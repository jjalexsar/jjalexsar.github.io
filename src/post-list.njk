{# src/posts-list.njk #}
---
layout: base.njk
title: "게시글 목록"
permalink: "/posts-list/"
---

<div class="card">
  <h2 style="margin:0 0 12px 0">게시글 목록</h2>
  <ul>
  {% for post in collections.posts %}
    <li>
      <a href="{{ post.url }}">{{ post.data.title or post.fileSlug }}</a>
      {% if post.date %} — <span class="muted">{{ post.date | date("yyyy-MM-dd") }}</span>{% endif %}
    </li>
  {% endfor %}
  </ul>
</div>
